@page
@model WebUI.Pages.Todo.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TodoList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TodoList.Id" />
            <div class="form-group">
                <label asp-for="TodoList.Title" class="control-label"></label>
                <input asp-for="TodoList.Title" class="form-control" />
                <span asp-validation-for="TodoList.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoList.Priority" class="control-label"></label>
                <select asp-for="TodoList.Priority" class="form-control"></select>
                <span asp-validation-for="TodoList.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoList.Created" class="control-label"></label>
                <input asp-for="TodoList.Created" class="form-control" />
                <span asp-validation-for="TodoList.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoList.CreatedBy" class="control-label"></label>
                <input asp-for="TodoList.CreatedBy" class="form-control" />
                <span asp-validation-for="TodoList.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoList.Modified" class="control-label"></label>
                <input asp-for="TodoList.Modified" class="form-control" />
                <span asp-validation-for="TodoList.Modified" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoList.ModifiedBy" class="control-label"></label>
                <input asp-for="TodoList.ModifiedBy" class="form-control" />
                <span asp-validation-for="TodoList.ModifiedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
