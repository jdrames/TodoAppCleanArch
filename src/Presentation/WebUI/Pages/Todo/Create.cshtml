@page
@model WebUI.Pages.Todo.CreateModel
@using Domain.Enums;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>TodoList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TodoList.Title" class="control-label"></label>
                <input asp-for="TodoList.Title" class="form-control" />
                <span asp-validation-for="TodoList.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoList.Priority" class="control-label"></label>
                @Html.DropDownListFor(x => x.TodoList.Priority, Html.GetEnumSelectList<PriorityLevel>(), new { @class = "form-select" })                
                <span asp-validation-for="TodoList.Priority" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
